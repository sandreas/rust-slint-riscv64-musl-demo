import {
    VerticalBox,
} from "std-widgets.slint";
import { SlintIcons } from "../../globals.slint";
import { PlayIcon } from "../icons/PlayIcon.slint";
import { PauseIcon } from "../icons/PauseIcon.slint";

// import { PlayIcon, PauseIcon } from "@lucide";


export component TogglePlayButton inherits TouchArea {

    in-out property <bool> is-playing: false;
    in-out property <physical-length> size: 48px;
    VerticalBox {
        padding:0px;
        if is-playing: PauseIcon {
            width: size;
            height: size;
        }
        if !is-playing: PlayIcon {
            width: size;
            height: size;
       }
    }

}



